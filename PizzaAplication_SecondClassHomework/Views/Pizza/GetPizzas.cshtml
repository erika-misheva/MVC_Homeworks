@using PizzaAplication.Models.Domain;
@using PizzaAplication.Models.Mapper;
@using PizzaAplication.Models.ViewModels

@model List<PizzaViewModel>

<h2>Pizzas:</h2>


@for (int i = 0; i < Model.Count; i++)

{
    <ul>
        <li>@Model.ElementAt(i).Name</li>
        <li>The Pizza costs @Model.ElementAt(i).Price</li>
    </ul>




}






